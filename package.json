{
  "name": "kube-credential-redis-system",
  "version": "2.0.0",
  "description": "Complete Redis Pub/Sub Credential Management System",
  "scripts": {
    "install:all": "npm run install:services && npm run install:frontend",
    "install:services": "npm run install:issuance && npm run install:verification",
    "install:frontend": "npm run install:issuance-app && npm run install:verification-app",
    "install:issuance": "cd services/issuance-service && npm install",
    "install:verification": "cd services/verification-service && npm install",
    "install:issuance-app": "cd frontend/issuance-app && npm install",
    "install:verification-app": "cd frontend/verification-app && npm install",
    "dev:issuance": "cd services/issuance-service && npm run dev",
    "dev:verification": "cd services/verification-service && npm run dev",
    "dev:issuance-app": "cd frontend/issuance-app && npm run dev",
    "dev:verification-app": "cd frontend/verification-app && npm run dev",
    "dev:services": "concurrently \"npm run dev:issuance\" \"npm run dev:verification\"",
    "dev:frontend": "concurrently \"npm run dev:issuance-app\" \"npm run dev:verification-app\"",
    "dev:all": "concurrently \"npm run dev:services\" \"npm run dev:frontend\"",
    "test:issuance": "cd services/issuance-service && npm test",
    "test:verification": "cd services/verification-service && npm test",
    "test:issuance-app": "cd frontend/issuance-app && npm test",
    "test:verification-app": "cd frontend/verification-app && npm test",
    "test:all": "npm run test:issuance && npm run test:verification && npm run test:issuance-app && npm run test:verification-app",
    "test:unit": "npm run test:all -- --testPathIgnorePatterns=\"__tests__/integration|__tests__/e2e\"",
    "test:integration": "npm run test:all -- --testPathPattern=\"__tests__/integration\"",
    "test:e2e": "npm run test:all -- --testPathPattern=\"__tests__/e2e\"",
    "test:watch": "npm run test:all -- --watch",
    "test:coverage": "npm run test:all -- --coverage",
    "test:ci": "npm run test:all -- --ci --coverage",
    "build:issuance": "cd services/issuance-service && npm run build",
    "build:verification": "cd services/verification-service && npm run build",
    "build:issuance-app": "cd frontend/issuance-app && npm run build",
    "build:verification-app": "cd frontend/verification-app && npm run build",
    "build:services": "npm run build:issuance && npm run build:verification",
    "build:frontend": "npm run build:issuance-app && npm run build:verification-app",
    "build:all": "npm run build:services && npm run build:frontend",
    "start:issuance": "cd services/issuance-service && npm start",
    "start:verification": "cd services/verification-service && npm start",
    "start:issuance-app": "cd frontend/issuance-app && npm start",
    "start:verification-app": "cd frontend/verification-app && npm start",
    "start:services": "concurrently \"npm run start:issuance\" \"npm run start:verification\"",
    "start:frontend": "concurrently \"npm run start:issuance-app\" \"npm run start:verification-app\"",
    "start:all": "concurrently \"npm run start:services\" \"npm run start:frontend\"",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit --exit-code-from test",
    "docs:generate": "npm-run-all docs:generate:*",
    "docs:generate:issuance": "swagger-cli bundle -o docs/api/specs/issuance-service.openapi.json docs/api/specs/issuance-service.openapi.yaml",
    "docs:generate:verification": "swagger-cli bundle -o docs/api/specs/verification-service.openapi.json docs/api/specs/verification-service.openapi.yaml",
    "docs:serve": "npm-run-all --parallel docs:serve:*",
    "docs:serve:scalar": "concurrently \"npx @scalar/cli@latest document serve docs/api/specs/issuance-service.openapi.yaml --port 5000\" \"npx @scalar/cli@latest document serve docs/api/specs/verification-service.openapi.yaml --port 5001\"",
    "docs:serve:redoc": "concurrently \"redocly preview-docs docs/api/specs/issuance-service.openapi.yaml --port 5000\" \"redocly preview-docs docs/api/specs/verification-service.openapi.yaml --port 5001\"",
    "docs:serve:swagger": "concurrently \"redocly preview-docs docs/api/specs/issuance-service.openapi.yaml --port 5210 --use-community-edition\" \"redocly preview-docs docs/api/specs/verification-service.openapi.yaml --port 5211 --use-community-edition\"",
    "docs:validate": "npm-run-all docs:validate:*",
    "docs:validate:issuance": "swagger-cli validate docs/api/specs/issuance-service.openapi.yaml",
    "docs:validate:verification": "swagger-cli validate docs/api/specs/verification-service.openapi.yaml",
    "redis:start": "docker run -d --name redis -p 6379:6379 redis:alpine",
    "redis:stop": "docker stop redis && docker rm redis",
    "docs:scalar:issuance": "npx --yes @scalar/cli document serve docs/api/specs/issuance-service.openapi.yaml --watch --port 5000",
    "docs:scalar:verification": "npx --yes @scalar/cli document serve docs/api/specs/verification-service.openapi.yaml --watch --port 5001",
    "docs:scalar": "concurrently \"npm run docs:scalar:issuance\" \"npm run docs:scalar:verification\"",
    "docs:swagger:issuance": "npx --yes swagger-ui-watcher docs/api/specs/issuance-service.openapi.yaml --port 5210",
    "docs:swagger:verification": "npx --yes swagger-ui-watcher docs/api/specs/verification-service.openapi.yaml --port 5211",
    "docs:swagger": "concurrently \"npm run docs:swagger:issuance\" \"npm run docs:swagger:verification\"",
    "docs:preview": "concurrently \"npm run docs:scalar\" \"npm run docs:swagger\""
  },
  "devDependencies": {
    "@scalar/cli": "^1.3.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "concurrently": "^8.2.0",
    "npm-run-all": "^4.1.5",
    "swagger-cli": "^4.0.4",
    "swagger-ui-watcher": "^2.1.14"
  },
  "author": "Kube",
  "license": "MIT"
}
